<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1480px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewRowBackVerificacion"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/row_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verificaci贸n de cuenta"
                android:fontFamily="@font/hind_madurai"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se ha enviado un c贸digo de verificaci贸n al correo proporcionado."
                android:textSize="20sp"
                android:textColor="@color/very_dark_gray"
                android:textAlignment="center"
                android:layout_weight="1"
                android:fontFamily="@font/hind_madurai"
                android:gravity="center"
                android:justificationMode="inter_word"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/editTextCodigo1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:inputType="text|number"
                    android:background="@drawable/text_input"
                    android:padding="12dp"
                    android:fontFamily="@font/hind_madurai"
                    android:layout_marginRight="8dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/very_dark_gray"/>

                <EditText
                    android:id="@+id/editTextCodigo2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:inputType="text|number"
                    android:background="@drawable/text_input"
                    android:padding="12dp"
                    android:fontFamily="@font/hind_madurai"
                    android:layout_marginRight="8dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/very_dark_gray"/>

                <EditText
                    android:id="@+id/editTextCodigo3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:inputType="text|number"
                    android:background="@drawable/text_input"
                    android:padding="12dp"
                    android:fontFamily="@font/hind_madurai"
                    android:layout_marginRight="8dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/very_dark_gray"/>

                <EditText
                    android:id="@+id/editTextCodigo4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:inputType="text|number"
                    android:background="@drawable/text_input"
                    android:padding="12dp"
                    android:fontFamily="@font/hind_madurai"
                    android:textAlignment="center"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/very_dark_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewResend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reenviar c贸digo en 1:00 min"
                    android:textSize="20sp"
                    android:textColor="@color/secundary_one"
                    android:fontFamily="@font/hind_madurai"
                    android:gravity="center|end"
                    android:layout_weight="1"
                    android:textFontWeight="600"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonVerificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviar correo"
                    android:background="@drawable/button_filled"
                    android:textColor="@color/background"
                    android:textSize="20sp"
                    android:fontFamily="@font/hind_madurai"
                    android:padding="16dp"
                    android:textAllCaps="false"
                    android:textFontWeight="600"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>