<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alerts_bkg"
    android:id="@+id/warning_dialog"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_yellow"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/info_triangle" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitleWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/hind_madurai"
        android:textFontWeight="600"
        android:textAlignment="center"
        android:layout_marginVertical="18dp"/>

    <TextView
        android:id="@+id/textViewInfoWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning"
        android:fontFamily="@font/hind_madurai"
        android:textSize="18sp"
        android:textColor="@color/very_dark_gray"
        android:layout_marginBottom="38dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirmWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:background="@drawable/button_filled_yellow"
            android:textColor="@color/background"
            android:fontFamily="@font/hind_madurai"
            android:textSize="16sp"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>