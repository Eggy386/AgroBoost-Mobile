<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/weather" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperatura"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24º C"
                            android:textSize="24sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pronóstico"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nublado"
                            android:textSize="24sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginVertical="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Cultivo"
                            android:layout_weight="1"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/hind_madurai"
                            android:textStyle="bold"
                            android:textSize="26sp"
                            android:gravity="center|left"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutUnCultivo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginVertical="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layoutHumedad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/contenedor"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Humedad"
                                    android:textColor="@color/primary"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/hind_madurai"
                                    android:textFontWeight="600"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp">

                                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                        android:id="@+id/circularProgressBarHumedad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        app:cpb_background_progressbar_color="@color/background"
                                        app:cpb_progressbar_color="@color/colorPrimary"
                                        app:cpb_progressbar_width="15dp"
                                        app:cpb_background_progressbar_width="5dp"
                                        app:cpb_round_border="true"
                                        app:cpb_start_angle="270"/>

                                    <TextView
                                        android:id="@+id/textViewHumedadProgress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0%"
                                        android:textColor="@color/blue"
                                        android:textSize="26sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/hind_madurai"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.8"/>

                            <LinearLayout
                                android:id="@+id/layoutTemperatura"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/contenedor"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Temperatura"
                                    android:textColor="@color/primary"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/hind_madurai"
                                    android:textFontWeight="600"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp">

                                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                        android:id="@+id/circularProgressBarTemperatura"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        app:cpb_background_progressbar_color="@color/background"
                                        app:cpb_progressbar_color="@color/red"
                                        app:cpb_progressbar_width="15dp"
                                        app:cpb_background_progressbar_width="5dp"
                                        app:cpb_round_border="true"
                                        app:cpb_start_angle="270"/>

                                    <TextView
                                        android:id="@+id/textViewTemperaturaProgress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0%"
                                        android:textColor="@color/red"
                                        android:textSize="26sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/hind_madurai"/>
                            </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutNutrientes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/contenedor"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nutrientes"
                                android:textColor="@color/primary"
                                android:textSize="20sp"
                                android:fontFamily="@font/hind_madurai"
                                android:textFontWeight="600"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp">

                                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                            android:id="@+id/circularProgressBarNitrogeno"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            app:cpb_background_progressbar_color="@color/background"
                                            app:cpb_progressbar_color="@color/red"
                                            app:cpb_progressbar_width="15dp"
                                            app:cpb_background_progressbar_width="5dp"
                                            app:cpb_round_border="true"
                                            app:cpb_start_angle="270"/>

                                        <TextView
                                            android:id="@+id/textViewNitrogenoProgress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:text="0%"
                                            android:textColor="@color/red"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/hind_madurai"
                                            android:layout_marginHorizontal="18dp"
                                            android:textAlignment="center"/>
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Nitrógeno"
                                        android:textAlignment="center"
                                        android:textColor="@color/secundary_one"
                                        android:textSize="18sp"
                                        android:fontFamily="@font/hind_madurai"/>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp">

                                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                            android:id="@+id/circularProgressBarFosforo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            app:cpb_background_progressbar_color="@color/background"
                                            app:cpb_progressbar_color="@color/yellow"
                                            app:cpb_progressbar_width="15dp"
                                            app:cpb_background_progressbar_width="5dp"
                                            app:cpb_round_border="true"
                                            app:cpb_start_angle="270"/>

                                        <TextView
                                            android:id="@+id/textViewFosforoProgress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:text="0%"
                                            android:textColor="@color/yellow"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/hind_madurai"
                                            android:layout_marginHorizontal="18dp"
                                            android:textAlignment="center"/>
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Fósforo"
                                        android:textAlignment="center"
                                        android:textColor="@color/secundary_one"
                                        android:textSize="18sp"
                                        android:fontFamily="@font/hind_madurai"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp">

                                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                            android:id="@+id/circularProgressBarPotasio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            app:cpb_background_progressbar_color="@color/background"
                                            app:cpb_progressbar_color="@color/blue"
                                            app:cpb_progressbar_width="15dp"
                                            app:cpb_background_progressbar_width="5dp"
                                            app:cpb_round_border="true"
                                            app:cpb_start_angle="270"/>

                                        <TextView
                                            android:id="@+id/textViewPotasioProgress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:text="0%"
                                            android:textColor="@color/blue"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/hind_madurai"
                                            android:layout_marginHorizontal="18dp"
                                            android:textAlignment="center"/>
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Potasio"
                                        android:textAlignment="center"
                                        android:textColor="@color/secundary_one"
                                        android:textSize="18sp"
                                        android:fontFamily="@font/hind_madurai"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutNoCultivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginVertical="12dp"
                        android:padding="12dp"
                        android:background="@drawable/contenedor"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parece que aún no has registrado ningún cultivo. ¿Por qué no comienzas tu viaje agrícola ahora mismo?."
                            android:textColor="@color/very_dark_gray"
                            android:textSize="16sp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/hind_madurai"/>

                        <ImageView
                            android:layout_width="162dp"
                            android:layout_height="162dp"
                            android:src="@drawable/undraw_environment"
                            android:layout_marginVertical="22dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registrar cultivo"
                            android:textColor="@color/background"
                            android:textSize="18sp"
                            android:fontFamily="@font/hind_madurai"
                            android:padding="12dp"
                            android:textAllCaps="false"
                            android:background="@drawable/button_filled"
                            android:textFontWeight="600"/>
                    </LinearLayout>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewCultivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calendario"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/hind_madurai"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:gravity="center|left"
                        android:layout_marginBottom="8dp"/>

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>