<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/contenedor_light"
    android:layout_marginVertical="6dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewHoraRiego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05:30 p.m."
            android:textSize="32sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/hind_madurai"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewDiasRiego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos los dÃ­as"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"/>
    </LinearLayout>

    <Switch
        android:id="@+id/switchActivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:trackTint="@color/primary"/>
</LinearLayout>
