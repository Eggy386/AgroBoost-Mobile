<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/contenedor"
    android:layout_marginVertical="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageCultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/maiz_crop"
            android:adjustViewBounds="true"
            android:tint="@color/gris_transparente"/>

        <TextView
            android:id="@+id/textTipoCultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maíz"
            android:textColor="@color/background"
            android:textSize="22dp"
            android:fontFamily="@font/hind_madurai"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:fontFamily="@font/hind_madurai"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/textTemperaturaCultivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20°C"
                android:textSize="22dp"
                android:textColor="@color/red"
                android:fontFamily="@font/hind_madurai"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humedad:"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:fontFamily="@font/hind_madurai"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/textHumedadCultivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="78%"
                android:textSize="22dp"
                android:textColor="@color/blue"
                android:fontFamily="@font/hind_madurai"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>