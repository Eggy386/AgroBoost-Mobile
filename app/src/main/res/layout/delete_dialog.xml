<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alerts_bkg"
    android:id="@+id/delete_dialog"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_red"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/trash" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitleDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/hind_madurai"
        android:textFontWeight="600"
        android:textAlignment="center"
        android:layout_marginVertical="18dp"/>

    <TextView
        android:id="@+id/textViewInfoDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:fontFamily="@font/hind_madurai"
        android:textSize="18sp"
        android:textColor="@color/very_dark_gray"
        android:layout_marginBottom="38dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonCloseDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/button_outlined_red"
            android:textColor="@color/red"
            android:fontFamily="@font/hind_madurai"
            android:textSize="16sp"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/buttonConfirmDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:background="@drawable/button_filled_red"
            android:textColor="@color/background"
            android:fontFamily="@font/hind_madurai"
            android:textSize="16sp"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

</LinearLayout>