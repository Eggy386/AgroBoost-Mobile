<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SmartwatchFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/textViewInfoWatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asegúrate de que el Bluetooth esté activado en tu dispositivo móvil."
                    android:textColor="@color/very_dark_gray"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/watch" />

            <TextView
                android:id="@+id/deviceconnectionStatusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Smartwatch conectado"
                android:textSize="20sp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/hind_madurai"
                android:textFontWeight="600"
                android:textColor="@color/very_dark_gray"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_weight="3"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/checkwearablesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectar Smartwatch"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textFontWeight="600"
                android:padding="16dp"
                android:background="@drawable/button_filled"
                android:textColor="@color/background"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>