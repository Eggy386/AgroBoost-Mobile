<!-- item_recordatorio.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/contenedor_light"
    android:padding="12dp"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewNombreRecordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regar cultivo"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/hind_madurai"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewDiasRecordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos los dÃ­as"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/hind_madurai"/>

        <TextView
            android:id="@+id/textViewHoraRecordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:30 a.m."
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/hind_madurai"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center">

        <Switch
            android:id="@+id/switchRecordatorio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:trackTint="@color/primary"/>
    </LinearLayout>
</LinearLayout>
