 <resources>
        <style name="Theme.NavigationDrawawerKotlin" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="colorPrimary">@color/primary</item>
            <item name="colorSecondary">@color/secundary_one</item>
            <item name="colorOnPrimary">@color/background</item>

            <item name="android:statusBarColor">?attr/colorSecondary</item>
        </style>

        <style name="Theme.Inicio" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="colorPrimary">@color/primary</item>
            <item name="colorSecondary">@color/secundary_one</item>
            <item name="colorOnPrimary">@color/background</item>

            <item name="android:statusBarColor">?attr/colorSecondary</item>
            <item name="ViewLayoutColor">@color/primary</item>
        </style>

        <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
            <item name="spinBars">true</item>
            <item name="color">@color/black</item>
        </style>

        <style name="DialogAnimation">
            <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
            <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
        </style>

     <style name="CircularButton" parent="Widget.AppCompat.CompoundButton.CheckBox">
         <item name="android:layout_width">40dp</item>
         <item name="android:layout_height">40dp</item>
         <item name="android:background">@drawable/toggle_circular</item>
         <item name="android:textSize">18sp</item>
         <item name="android:gravity">center</item>
         <item name="android:layout_margin">5dp</item>
         <item name="android:button">@null</item>
         <item name="android:textColor">@drawable/color_text_mtrl</item>
     </style>
 </resources>